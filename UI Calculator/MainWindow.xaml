<Window x:Class="UI_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" Background="#FF1C3038">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Border Margin="3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" CornerRadius="15" Padding="5" Background="Black">
            <TextBlock Name="Calculation"  FontSize="40" HorizontalAlignment="Right" Foreground="White"></TextBlock>
        </Border>


        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="(" Click="AddSymbol"></Button>
            <Button Grid.Column="1" Content=")" Click="AddSymbol"></Button>
            <Button Grid.Column="2" Content="," Click="AddSymbol"></Button>
            <Button Grid.Column="3" Content="D" Click="DeleteSymbol">
                <Button.Background>
                    <RadialGradientBrush >
                        <GradientStop Color="Black" Offset="0.9"/>
                        <GradientStop Color="Red" Offset="0"/>
                    </RadialGradientBrush>
                </Button.Background>
            </Button>
            <Button Grid.Column="4" Content="C" Click="ClearCalculation">
                <Button.Background>
                    <RadialGradientBrush >
                        <GradientStop Color="Black" Offset="0.9"/>
                        <GradientStop Color="Red" Offset="0"/>
                    </RadialGradientBrush>
                </Button.Background>
            </Button>
        </Grid>


       
        <Button Grid.Row="2" Grid.Column="0" Content="+" Click="AddSymbol"></Button>
        <Button Grid.Row="3" Grid.Column="0" Content="1" Click="AddSymbol"></Button>
        <Button Grid.Row="4" Grid.Column="0" Content="4" Click="AddSymbol"></Button>
        <Button Grid.Row="5" Grid.Column="0" Content="7" Click="AddSymbol"></Button>

        
        <Button Grid.Row="2" Grid.Column="1" Content="-" Click="AddSymbol"></Button>
        <Button Grid.Row="3" Grid.Column="1" Content="2" Click="AddSymbol"></Button>
        <Button Grid.Row="4" Grid.Column="1" Content="5" Click="AddSymbol"></Button>
        <Button Grid.Row="5" Grid.Column="1" Content="8" Click="AddSymbol"></Button>

        
        <Button Grid.Row="2" Grid.Column="2" Content="/" Click="AddSymbol"></Button>
        <Button Grid.Row="3" Grid.Column="2" Content="3" Click="AddSymbol"></Button>
        <Button Grid.Row="4" Grid.Column="2" Content="6" Click="AddSymbol"></Button>
        <Button Grid.Row="5" Grid.Column="2" Content="9" Click="AddSymbol"></Button>

        
        <Button Grid.Row="2" Grid.Column="3" Content="*" Click="AddSymbol"></Button>
        <Button Grid.Row="3" Grid.Column="3" Content="0" Click="AddSymbol"></Button>
        <Button Grid.Row="4" Grid.Column="3" Content="=" Grid.RowSpan="2" BorderBrush="#FF0C0C0C" Click="StartCalculations">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#443c34" Offset="0.981"/>
                    <GradientStop Color="#c58233" Offset="0.1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
